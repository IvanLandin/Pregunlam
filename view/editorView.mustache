<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editor - Pregunlam</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="../public/lobby.css">
    <link rel="stylesheet" href="../public/editor.css">
</head>
<body>

<div class="container">
    <header class="header">
        <div class="logo">
            <img src="/public/images/logo.png" alt="logo.png">
            <a href="/editor"><h3>Pregunlam - Editor</h3></a>
        </div>
        <div class="welcome">
            <span>Bienvenido, {{username}}</span>
            <form action="/lobby/logout" method="post">
                <button type="submit" class="logout">Cerrar Sesión</button>
            </form>
        </div>
    </header>

    <main>
        <div class="button-container">
            <button class="action-btn reports" onclick="mostrarModal()">Reportes</button>
            <button class="action-btn edit" >Modificar Pregunta</button>
            <button class="action-btn create"onclick="mostrarModalPregunta()">Crear Nueva Pregunta</button>
        </div>
    </main>

    <div id="modalReportes" class="modal">
        <div class="modal-content">
            <span class="close" onclick="cerrarModal()">&times;</span>
            <h2>Reportes de Preguntas</h2>
            <table>
                <thead>
                <tr>
                    <th>ID Reporte</th>
                    <th>Motivo</th>
                    <th>Fecha</th>
                    <th>ID Usuario</th>
                    <th>ID Pregunta</th>
                </tr>
                </thead>
                <tbody id="tablaReportes">
                {{#reportes}}
                    <tr>
                        <td>{{id_reporte}}</td>
                        <td>{{motivo_reporte}}</td>
                        <td>{{fecha_reporte}}</td>
                        <td>{{id_usuario}}</td>
                        <td>{{id_pregunta}}</td>
                    </tr>
                {{/reportes}}
                </tbody>
            </table>
        </div>
    </div>


    <div id="modalPregunta" class="modal">
        <div class="modal-content">
            <span class="close" onclick="cerrarModalPregunta()">&times;</span>
            <h2>Crear Nueva Pregunta</h2>
            <form method="post" action="/editor/guardarPreguntaCreada">
                <div class="form-group">
                    <label for="pregunta">Pregunta:</label>
                    <input type="text" id="pregunta" name="pregunta" placeholder="Ejemplo: ¿Cuál es la capital de Francia?" required>
                </div>

                <div class="form-group">
                    <label for="respuesta1">Respuesta Correcta:</label>
                    <input type="text" id="respuesta1" name="respuestaCorrecta" placeholder="Ejemplo: París" required>
                </div>

                <div class="form-group">
                    <label for="respuesta2">Respuesta incorrecta 1:</label>
                    <input type="text" id="respuesta2" name="respuestaincorrecta1" placeholder="Ejemplo: Londres" required>
                </div>

                <div class="form-group">
                    <label for="respuesta3">Respuesta incorrecta 2:</label>
                    <input type="text" id="respuesta3" name="respuestaincorrecta2" placeholder="Ejemplo: Roma" required>
                </div>

                <div class="form-group">
                    <label for="respuesta4">Respuesta incorrecta 3:</label>
                    <input type="text" id="respuesta4" name="respuestaincorrecta3" placeholder="Ejemplo: Berlín" required>
                </div>
                <div class="form-group">
                    <label for="categoria">Categoría:</label>
                    <select id="categoria" name="id_categoria" required>
                        <option value="">Selecciona una categoría</option>
                        <option value="1">Historia</option>
                        <option value="2">Deporte</option>
                        <option value="3">Entretenimiento</option>
                        <option value="4">Arte</option>
                        <option value="5">Tecnología</option>
                        <option value="6">Geografía</option>
                        <option value="7">Ciencia</option>
                    </select>
                </div>
                <button type="submit" class="submit-btn">Guardar Pregunta</button>
            </form>
        </div>
    </div>

    <footer class="w3-center">
        <div class="footer-container w3-gray">
            <h4 class="w3-text-white"><b>Seguinos</b></h4>
            <div class="footer-icons">
                <ul>
                    <li><a href="#"><i class="fa fa-linkedin fa-2x"></i></a></li>
                    <li><a href="#"><i class="fa fa-instagram fa-2x"></i></a></li>
                    <li><a href="#"><i class="fa fa-twitter fa-2x"></i></a></li>
                </ul>
            </div>
        </div>
        <div class="copyright w3-dark-gray w3-text-white">
            <p>2024 - Grupo 3</p>
        </div>
    </footer>
</div>

<script>
    function mostrarModal() {
        document.getElementById('modalReportes').style.display = 'block';
        cargarReportes();
    }

    function cerrarModal() {
        document.getElementById('modalReportes').style.display = 'none';
    }


    function mostrarModalPregunta() {
        document.getElementById('modalPregunta').style.display = 'block';
    }

    function cerrarModalPregunta() {
        document.getElementById('modalPregunta').style.display = 'none';
    }

    document.getElementById('formPregunta').addEventListener('submit', function (e) {
        e.preventDefault();
        alert('Pregunta creada correctamente');
        cerrarModalPregunta();
    });

</script>

</body>
</html>
