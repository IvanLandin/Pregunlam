

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pregunlam</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="/public/lobby.css">

</head>
<body>
<div class="container">
    {{#usuario}}
        <header class="header">
            <div class="logo">
                <a href="/lobby">
                    <h3>Pregunlam</h3>
                </a>
            </div>
            <div class="welcome">
                <span>Bienvenido, {{nombreCompleto_usuario}}</span>
                <form action="/lobby/logout" method="post">
                    <button type="submit" class="logout" id="btnCerrarSesion">Cerrar Sesión</button>
                </form>
            </div>
        </header>
    {{/usuario}}

    {{#perfil}}
        <main>

            <article id="informacionDeUsuario">

            <section class="user-info">

                {{#message}}
                    <div class="w3-panel w3-red w3-display-container">
                        <span onclick="this.parentElement.style.display='none'" class="w3-button w3-large w3-display-topright">&times;</span>
                        <h4>{{message}}</h4>
                    </div>
                {{/message}}
                <div class="avatar">
                    <img src="{{img_usuario}}" alt="Avatar">
                </div>
                <div class="user-data">
                    <h2>{{userName_usuario}}</h2>
                    <h2>Tu puntuacion</h2>
                    {{#maxPuntaje_usuario}}
                        <span class="points">{{maxPuntaje_usuario}} puntos</span>
                    {{/maxPuntaje_usuario}}
                    {{^maxPuntaje_usuario}}
                        <span class="points">0 puntos</span>
                    {{/maxPuntaje_usuario}}
                </div>

                <div class="qr_class">
                    <img id="qr_code" src="../public/images/qr.jpg">
                </div>
            </section>

            {{#perfilUsuario}}
                <div class="botonM">
                    <a href="/modificarPerfil?id={{id_usuario}}">
                    <input id="botonModificar" type="button" value="Modificar perfil" class="w3-btn w3-yellow">
                    </a>
                </div>
            {{/perfilUsuario}}

            <section class="game-history">
                <table>
                    <thead>
                    <tr>
                        <th>Partida</th>
                        <th>Puntos</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                    </tr>
                    </tbody>
                </table>
                <button class="see-more">Ver más</button>
            </section>

            {{#message}}
                <p style="color: #42a501;">{{message}}</p>
            {{/message}}

            </article>
        </main>
    {{/perfil}}


</div>
</body>
</html>


